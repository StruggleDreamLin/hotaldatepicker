<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.dreamlin.hotaldatepicker.DatePickerView
        android:id="@+id/date_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoMeasure="true"
        app:canSelectBeforeDay="false"
        app:dateNormalBgColor="#FFFFFF"
        app:dateSelectBgColor="@color/dateColor"
        app:endBg="@drawable/bg_end"
        app:startBg="@drawable/bg_begin_multi"
        app:startBgOnly="@drawable/bg_begin_single" />

</RelativeLayout>